{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Types of Crime Over Time"},
    "width": 400,
    "height": 200,
    "data": {
      "url": "https://raw.githubusercontent.com/linhphxm/3179/main/crimetime1.csv"
    },
    "layer": [
      {
        "mark": { "type": "line", "strokeWidth": 3 },
        "selection": {
          "highlight": {
            "type": "multi",
            "fields": ["indicator"],
            "bind": "legend"
          }
        },
        "encoding": {
          "x": {
            "field": "Date",
            "type": "ordinal",
            "title": null,
            "axis": {"labelAngle": -45} 
          },
          "y": {
            "field": "Value",
            "type": "quantitative",
            "title": "Average # of Offences per 100,000"
          },
          "color": {
            "field": "indicator",
            "type": "nominal",
            "title": "Types of Crime",
            "scale": {"range": ["#EB8887", "#FFA835", "#EBD454", "#A1DB9D", "#6EA4E6", "#B89FF5", "#FF99FC", "#C2824A"]}
          },
          "opacity": {
            "condition": {
              "selection": "highlight",
              "value": 0.6
            },
            "value": 0.2
          },
          "tooltip": [
            {
                "field": "indicator",
                "type": "nominal",
                "title": "Crime Type"
            },
            {
                "field": "Value",
                "type": "quantitative",
                "title": "Average Amount"
            },
            {
                "field": "Date",
                "type": "ordinal",
                "title": "Year"
            }
        ]
    }
},
{
        "transform": [
          {"sort": [{"field": "Value", "order": "descending"}],
            "window": [{"op": "row_number", "as": "rowNumber"}],
            "frame": [null, null]},
          {"filter": "datum.rowNumber == 1"},

          {
            "calculate": "datum['indicator'] + ' had the most; amount of crime overall: ' + datum['Value']",
            "as": "text_annotation_raw2"
          },
          {
            "calculate": "split(datum.text_annotation_raw2, ';')",
            "as": "text_annotation2"
          }

        ],
        "mark": {"type":"text", "dx": 90, "dy": 35, "font": "Raleway"},
        "encoding": {
          "x": {"field": "Date", "type": "ordinal", "aggregate": "max", "title": null},
          "y": {"field": "Value", "type": "quantitative", "aggregate": "max"},
          "text": {"field": "text_annotation2", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {"selection": "highlight", "value": 1},
            "value": 0
          }
        }
      }
    ],
    "config": {
      "text": {
        "font": "Raleway" 
      },
      "title": {
        "font": "Raleway", 
        "anchor": "middle" 
      },
      "axis": {
        "labelFont": "Raleway", 
        "titleFont": "Raleway"  
      },
      "legend": {
        "labelFont": "Raleway", 
        "titleFont": "Raleway"  
      }
    }
  }